	<!-- Groups contains several views, dialogs and other UI component definitions -->
	<views>

		<view id="zentralregisterView" modal="false" type="view">
		
			<tab id="zentralregisterTab">
				
				<!-- ZREG Klassierung section -->
				<section id="zregKlassierungSection">
					<row>
						<label id="zregnrLabel" />
						<input id="zregnrInput" type="integer" enabled="false" />
						<input id="kurzbezeichnungInput1" enabled="false" />
					</row>
					<row>
						<label id="zregArtLabel" />
						<select id="zregArtSelect" mandatory="true" triggersCall="true" />
						<select id="snbSektorSelect" mandatory="true" triggersCall="true" />
					</row>
					<row>
						<label id="beziehungsartLabel" />
						<select id="beziehungsartSelect" triggersCall="true" changeRelevant="true" />
					</row>
				</section>

				<!-- Angaben Domizil Adresse section -->
				<section id="angabenDomizilAdresseSection">
					<row>
						<label id="nameVornameLabel" changeRelevant="true" />
						<input id="nameInput" changeRelevant="true" />
						<input id="vornameInput" changeRelevant="true" />
					</row>
					<row>
						<label id="zweitNameLabel" />
						<input id="zweitNameInput" type="checkbox" />
					</row>
					<row>
						<label id="kurzbezeichnungLabel" />
						<input id="kurzbezeichnungInput2" type="string" />
					</row>
					<row>
						<label id="andredeTitelLabel" />
						<select id="anredeSelect" />
						<select id="titelSelect" />
					</row>
					<row>
						<label id="briefanredeLabel" />
						<input id="briefanredeInput" changeRelevant="true" />
					</row>
					<row>
						<label id="strasseNrPostfachNrLabel" />
						<input id="strasseInput" />
						<input id="nrInput" />
						<input id="postfachNrInput" />
					</row>
					<row>
						<label id="landPLZOrtLabel" />
						<select id="landSelect" />
					</row>
				</section>

				<!-- Kunden -/Kontaktdaten section -->
				<section id="kundenKontaktdatenSection">
					<row>
						<label id="geschlechtKundenspracheLabel" />
						<select id="geschlechtSelect" />
						<select id="kundenspracheSelect" />
					</row>
					<row>
						<label id="nationalitaetAufenthaltsbewLabel" />
						<select id="nationalitaetSelect" />
						<select id="aufenthaltsbewSelect" />
					</row>
					<row>
						<label id="geburtsdatumLabel" />
						<input id="geburtsdatumInput" type="date" />
					</row>
					<row>
						<label id="zivilstandGueterstandKonfessionLabel" />
						<select id="zivilstandSelect" />
						<select id="gueterstandSelect" />
						<select id="konfessionSelect" />
					</row>
					<row>
						<label id="angestBankorganBrancheLabel" />
						<select id="angestBankorganSelect" />
						<input id="brancheInput" enabled="false" />
					</row>
					<row>
						<label id="ahvnrVP3codierungLabel" />
						<input id="ahvnrInput" type="double" />
						<select id="vp3codierungInput" />
					</row>
					<row>
						<label id="telPrivGesMobileFaxLabel" />
						<input id="telPriv" />
						<input id="telGes" />
						<input id="telMobile" />
						<input id="telFax" />
					</row>
					<row>
						<label id="emailBevorzKontaktartLabel" />
						<input id="email" />
						<select id="bevorzKontaktartSelect" />
					</row>
					<row>
						<label id="werbungVerstorbenLabel" />
						<input id="werbungInput" type="checkbox" />
						<input id="verstorben" type="date" />
					</row>
					<row>
						<label id="wuenschtKeineBetreuungLabel" />
						<input id="keineBetreuungInput" type="checkbox" enabled="false" />
					</row>
				</section>

				<!-- Dynamic section, which will be visible if "Beziehungsart" is eqal 3 [Kennwort] -->
				<section id="kennwortBeziehungenSection">
					<row>
						<label id="bezeichnungLabel" />
						<input id="bezeichnungInput" />
					</row>
					<row>
						<label id="domizilBrancheLabel" />
						<select id="domizilSelect" />
						<select id="brancheSelect" />
					</row>
					<row>
						<label id="nationalitaetSpracheLabel" />
						<select id="nationalitaetSelect2" />
						<select id="spracheSelect" />
					</row>
				</section>
				
				<input id="adressAenderung" onSelect="OpenOnClickAdressAenderung" type="button" />
			</tab>
			
			<tab id="identifierungTab">
				<empty />
			</tab>

			<tab id="versandNariloTab">
				<empty />
			</tab>

			<tab id="betreuerWerbungTab">
				<empty />
			</tab>

			<tab id="vertraegeSteuerinfoTab">
				<empty />
			</tab>

			<tab id="finanzierenTab">
				<empty />
			</tab>

			<!-- Only visible, if SNB Sektor is equal [10,11,13,15,16,17] -->
			<tab id="unternehmensangabenTab">
				<empty />
			</tab>

			<tab id="bankTab">
				<empty />
			</tab>

			<tab id="meldungenTab">
				<empty />
			</tab>
