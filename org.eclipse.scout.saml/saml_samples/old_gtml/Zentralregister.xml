		<view id="DialogTest" type="dialog">
			<empty />
		</view>

		<view id="AdressAenderungDialog" type="dialog">
			<form>
					<row>
						<label id="nameVornameLabel" changeRelevant="true" />
						<input id="nameInput" changeRelevant="true" />
						<input id="vornameInput" changeRelevant="true" />
					</row>
					<row>
						<label id="zweitNameLabel" />
						<input id="zweitNameInput" type="checkbox" />
					</row>
					<row>
						<label id="kurzbezeichnungLabel" />
						<input id="kurzbezeichnungInput2" type="string" />
					</row>
					<row>
						<label id="andredeTitelLabel" />
						<select id="anredeSelect" />
						<select id="titelSelect" />
					</row>
					<row>
						<label id="briefanredeLabel" />
						<input id="briefanredeInput" changeRelevant="true" />
					</row>
					<row>
						<label id="strasseNrPostfachNrLabel" />
						<input id="strasseInput" />
						<input id="nrInput" />
						<input id="postfachNrInput" />
					</row>
					<row>
						<label id="landPLZOrtLabel" />
						<select id="landSelect" />
					</row>
			</form>
		</view>
		
		<view id="zentralregisterAuswahl" type="dialog">
			<form>
				<row>
					<label id="zregNrKurzbezeichnungLabel" />
					<input id="zregNrKurzbezeichnungInput" />
				</row>
				<row>
					<label id="nameVornameLabel2"/>
					<input id="nameInput2" />
					<input id="vornameInput2" />
				</row>
				<row>
					<label id="firmaLabel" />
					<input id="firmaInput" />
				</row>
				<row>
					<label id="firmaLabel2" />
					<input id="firmaInput2" />
				</row>
				<row>
					<label id="strasseNrLabel" />
					<input id="strasseInput2" />
					<input id="nrInput2" />
				</row>
				<row>
					<label id="plzOrtLabel" />
					<input id="plzInput" type="integer" />
					<input id="ortInput" />
				</row>
				<row>
					<label id="domizilLabel" />
					<select id="domizilSelect2" />
				</row>
				<row>
					<label id="geburtsdatumLabel2" />
					<input id="geburtsdatumInput2" type="date" />
				</row>
				<row>
					<label id="zweiterNameLabel2" />
					<input id="zweiterNameLabel" />
				</row>
				<row>
					<input id="sucheButton" onSelect="OpenAfterSelectVerstorben" type="button" />
					<input id="parameterButton" type="button" />
					<input id="resetButton" type="button" />
					<input id="beratungsModusCheckbox" type="checkbox" />
					<label id="beratungsModusLabel" />
				</row>
				<row>
					<table id="resultTable">
						<header>
							<column id="zregNrColumn" type="string" />
							<column id="kurzBezeichnungColumn" type="string" />
							<column id="geburtsdatumColumn" type="date" />
							<column id="strasseColumn" type="string" />
							<column id="plzOrtColumn" type="string" />
							<column id="zregArtColumn" type="string" />
						</header>
					</table>
				</row>
			</form>
			<form columns="2">
				<row>
					<label id="adresseLabel" />
					<textarea id="adresseTextarea" rows="4" enabled="false" />
				</row>
				<row>
					<label id="alleProzesseLabel" />
					<input id="alleProzesseInput" enabled="false" />
				</row>
				<row>
					<label id="defaultProzesseLabel" />
					<input id="defaultProzesseInput" enabled="false" />
				</row>
				<row>
					<label id="zahlenLabel" />
					<input id="zahlenInput" enabled="false" />
				</row>
				<row>
					<label id="sparenLabel" />
					<input id="sparenInput" enabled="false" />
				</row>
			</form>
		</view>
	</views>

	<actions>
		<open id="OpenAfterSelectVerstorben" ref="DialogTest" />	
		<open id="OpenOnClickAdressAenderung" ref="AdressAenderungDialog" />
